---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Request a VibeBox">
  <section style="padding: 2rem; max-width: 700px; margin: auto;">

    <h1 style="color:#fff; font-size:2rem; margin-bottom:1rem;">
      Request a VibeBox for your building
    </h1>

    <p style="color:#aaa; margin-bottom:2rem;">
      Tell us a little about your property and weâ€™ll follow up with a custom placement plan.
    </p>

    <form action="#" method="POST" style="display:flex; flex-direction:column; gap:1rem;">

      <input type="text" placeholder="Your Name" required />
      <input type="email" placeholder="Email" required />
      <input type="tel" placeholder="Phone Number" required />
      <input type="text" placeholder="Building Name" required />

      <select>
        <option>Apartments</option>
        <option>Office</option>
        <option>Commercial</option>
      </select>

      <input type="number" placeholder="Approx. residents / employees" />

      <textarea placeholder="Anything else we should know?"></textarea>

      <button style="
        background:#ffc107;
        border:none;
        padding:0.8rem 1.4rem;
        border-radius:8px;
        font-weight:600;
        color:#050509;
        cursor:pointer;">
        Submit placement request
      </button>

    </form>
  </section>
</Layout>
